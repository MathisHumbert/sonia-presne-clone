block variables 

doctype html 
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")

    base(href="/")

    title="Sonia Presne - Senior Art Director"

    //- description for google
    meta(name="description" content="Senior Art Director based in paris.")
    //- website icon
    <link rel="icon" type="image/svg+xml" href="/favicon.ico">

    link(href="main.css" rel="stylesheet")

  body(class=isDesktop ? 'desktop' : isTablet ? 'tablet' : isPhone ? 'phone' : '')
    include ./layouts/header
    include ./layouts/logos
    include ./layouts/cursor
    
    .content__wrapper
      include ./layouts/gallery
      .content#content(data-template=template)
        block content

    script(src='main.js')
